{# templates/admin/section/show.html.twig -- Show a section #}

{% extends 'admin/base.html.twig' %}

{% block title %}Membre : {{ controller_name }}{% endblock %}

{% block body %}
    <h1>Section</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Titre</th>
                <td>{{ section.title|trans }}</td>
            </tr>
            <tr>
                <th>Contenu en français</th>
                <td>{{ section.contentFr|raw }}</td>
            </tr>
            <tr>
                <th>Contenu en néerlandais</th>
                <td>{{ section.contentNl|raw }}</td>
            </tr>
            <tr>
                <th>Contenu en anglais</th>
                <td>{{ section.contentEn|raw }}</td>
            </tr>
        </tbody>
    </table>

{% endblock %}

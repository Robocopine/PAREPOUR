{# templates/admin/partials/_form.html.twig -- model form #}
<div class="row justify-content-center">
    <div class="card col-lg-8 p-0">
        <div class="card-header">
            <h2 class="h5">{{controller_name}} </h2>
        </div>
        <div class="card-body p-5">
        {{ form_start(form) }}
            {{ form_widget(form) }}
            <p class="text-center">
                <button type="submit" class="btn btn-primary mt-3">{{button_label}}</button>
            </p>
        {{ form_end(form) }}
        </div>
    </div>
</div>

{% if app.request.attributes.get("_route") == 'admin_section_edit' %}
    <script>
        var element = document.getElementById("section_title");
        element.setAttribute("readonly", true);
    </script>
{% endif %}
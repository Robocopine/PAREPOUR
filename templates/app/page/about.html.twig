                            <button type="button" class="btn btn-primary float-xl-right position-absolute" style="box-shadow:none;" data-bs-toggle="modal" data-bs-target="#updateModal{{notice.id}}">
                                <span><i class="fas fa-edit"></i></a></span>
                            </button>
                        </p>
                        {% include("app/partials/_editModal.html.twig") with {'modalId': notice.id } %}
                    {% endif %}
                {% endif %}
                <p>
                    {{ notice.contentFr|raw }}
                </p>
            </div>
        </div>
    </div>
</section>


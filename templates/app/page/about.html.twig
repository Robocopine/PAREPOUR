{# templates/app/page/about.html.twig -- About page + members show (Front) #}

{% extends 'app/base.html.twig' %}

{% block title %} {{ controller_name|trans }} {% endblock %}

{% block body %}

<!-- About section-->
<section id="about" class="bg-light">
    <div class="container">
        <div class="row gx-4 justify-content-center">
            <div class="col-lg-10">
                <h2 class="fw-light fs-4 mb-5">L'association</h2>
                {% if app.user %}
                    {% set user = app.user %}
                    {% if "ROLE_WEBMASTER" in user.roles %}
                        {% set linkUpdate = "section_edit"  %}
                        <p class="text-end mt-2">
                            <button type="button" class="btn btn-primary float-xl-right position-absolute" style="box-shadow:none;" data-bs-toggle="modal" data-bs-target="#updateModal{{about.id}}">
                                <span><i class="fas fa-edit"></i></a></span>
                            </button>
                        </p>
                        {% include("app/partials/_editModal.html.twig") with {'modalId': about.id } %}
                    {% endif %}
                {% endif %}
                <div class="text-justify">
                    <img src="{{ asset('src/img/about-2.jpeg') }}" alt="Supporters image" width="300px" class="img-fluid float-end mx-4 mb-4 rounded" />
                    {{ about.contentFr|raw }}
                </div>
            </div>
        </div>
    </div>
</section>
<section id="notice" class="bg-white">


{# templates/security/reset_password/request.html.twig -- Request to change password (Front) #}

{% extends 'app/base.html.twig' %}

{% block title %}{{ controller_name }}{% endblock %}

{% block body %}
    <section class="container">
        <div class="row justify-content-center">
            <div class="col-10">
                {% for flash_error in app.flashes('reset_password_error') %}
                    <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
                {% endfor %}
                <h2 class="fw-light fs-4 mb-4">{% trans %}Réinitialisez votre mot de passe{% endtrans %}</h2>
                <div class="mt-5">
                    {{ form_start(requestForm) }}
                        {{ form_row(requestForm.email) }}
                        <div>
                            <small>
                                {% trans %}Entrez votre adresse email pour recevoir un lien par email pour réinitialiser votre mot de passe.{% endtrans %}
                            </small>
                        </div>
                        <p class="text-center"><button class="btn btn-primary mt-5">{% trans %}Réinitialiser{% endtrans %}</button></p>
                    {{ form_end(requestForm) }}
                </div>
            </div>
        </div>
    </section>
{% endblock %}

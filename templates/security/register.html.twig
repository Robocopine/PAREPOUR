{# templates/security/register.html.twig -- Register Form (Front) #}

{% extends 'app/base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="row my-5 justify-content-center">
            <div class="col-10">
                <h2 class="fw-light fs-4 mb-5">Inscription</h2>

                {{ form_errors(registrationForm) }}

                {{ form_start(registrationForm) }}
                    {{ form_widget(registrationForm) }}
                    <p class="text-center"><button type="submit" class="btn btn-primary">S'inscrire</button></p>
                {{ form_end(registrationForm) }}
            </div>
        </div>
    </div>
{% endblock %}
